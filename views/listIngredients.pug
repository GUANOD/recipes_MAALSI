doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css")
    body
        h1 Ingredients
        .container.recipes.border.border-1.border-primary.rounded.rounded-3.m-3
            
            if ingredients.length == 0
              span No Ingredients to display...
            else
                .row
                    span.col-7.fw-bold Nom
                    span.col= ' '
                    span.col= ' '
                each ingredient in ingredients
                    div.row.recipe
                        a.col-7(href='/recipes/' + ingredient._id)
                            span.name.col-7= ingredient.name
                        a.col-3(href='/recipes/' + ingredient._id)
                            span.difficulty.col-3= ingredient.difficulty
                        a.col.btn.btn-info(href='/recipes/' + ingredient._id + '/edit').m-1
                            i(class="bi bi-pencil-square")
                        a.col.m-1
                            form(action='/recipes/' + ingredient._id + '/delete',method='POST')
                                button.btn.btn-danger(type='submit')
                                    i(class="bi bi-trash")
        span.m-3 Add new ingredient:
        form(action="/ingredient", method="post").m-3
            input(name="name")
            input(type="submit", value="Create new Ingredients")
        
        a.col.btn.btn-info(href='/recipes').m-1 Recipes
        